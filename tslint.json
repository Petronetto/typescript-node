{
  "extends": ["tslint-config-standard"],
  "env": {
    "node": true
  },
  "rulesDirectory": [
    "node_modules/tslint-eslint-rules/dist/rules"
  ],
  "rules": {
    "no-debugger": true,
    "no-console": [true, "log"],
    "align": [true, "parameters", "statements"],
    "typedef-whitespace": [true,
      {
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ]
  }
}